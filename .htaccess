RewriteEngine On

RewriteCond %{HTTPS} off [OR]
RewriteCond %{HTTP_HOST} ^www\.lynopack\.com$ [NC]
RewriteRule ^(.*)$ https://lynopack.com/$1 [L,R=301]

RewriteCond %{THE_REQUEST} \s/+(.+)\.html[\s?]
RewriteRule ^ %1.php [L,R=301]

# SEO-friendly product URL: /products/group/subcategory/product-id
RewriteRule ^products/([^/]+)/([^/]+)/([^/]+)/?$ Products/product-detail.php?group=$1&category=$2&id=$3 [L,QSA]

# SEO-friendly category URL: /products/group/subcategory
RewriteRule ^products/([^/]+)/([^/]+)/?$ Products/category-detail.php?group=$1&id=$2 [L,QSA]

# Legacy routes (fallback)
RewriteRule ^category/([^/]+)/?$ Products/category-detail.php?id=$1 [L,QSA]
RewriteRule ^product/([^/]+)/?$ Products/product-detail.php?id=$1 [L,QSA]

Options -Indexes

<IfModule mod_deflate.c>
  AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json application/xml
</IfModule>

<IfModule mod_expires.c>
  ExpiresActive On
  ExpiresByType text/css "access plus 7 days"
  ExpiresByType text/javascript "access plus 7 days"
  ExpiresByType application/javascript "access plus 7 days"
  ExpiresByType image/jpeg "access plus 30 days"
  ExpiresByType image/png "access plus 30 days"
  ExpiresByType image/webp "access plus 30 days"
  ExpiresByType image/gif "access plus 30 days"
  ExpiresByType image/svg+xml "access plus 30 days"
  ExpiresByType application/font-woff "access plus 30 days"
  ExpiresByType application/font-woff2 "access plus 30 days"
</IfModule>

<IfModule mod_headers.c>
  <FilesMatch "\.(js|css|jpg|jpeg|png|gif|webp|svg|woff|woff2)$">
    Header set Cache-Control "public, max-age=2592000"
  </FilesMatch>
</IfModule>
